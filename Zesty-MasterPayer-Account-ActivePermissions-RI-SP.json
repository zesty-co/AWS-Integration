{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Integration IAM Role for Zesty",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {
            "default": "Zesty Customer Configuration"
          },
          "Parameters": [
            "ClientUUIDToken"
          ]
        }
      ],
      "ParameterLabels": {
        "ClientUUIDToken": {
          "default": "Zesty Customer ID"
        }
      }
    }
  },
  "Parameters": {
    "ClientUUIDToken": {
      "Description": "[DO NOT MODIFY] The customer ID provided by Zesty to identify you as a client",
      "Type": "String"
    }
  },
  "Resources": {
    "ZestyIamRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Condition": {
                "StringEquals": {
                  "sts:ExternalId": {
                    "Ref": "ClientUUIDToken"
                  }
                }
              },
              "Principal": {
                "AWS": [
                  "arn:aws:iam::672188301118:root"
                ]
              }
            }
          ]
        },
        "MaxSessionDuration": 43200,
        "Policies": [
          {
            "PolicyName": "Zesty-Policy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Sid": "ZestyEC2Access",
                  "Effect": "Allow",
                  "Action": [
                    "ec2:List*",
                    "tag:GetResources",
                    "tag:GetTagKeys",
                    "tag:GetTagValues",
                    "elasticloadbalancing:Describe*",
                    "ec2:Describe*",
                    "ec2:CreateReservedInstancesListing",
                    "ec2:PurchaseReservedInstancesOffering",
                    "ec2:PurchaseHostReservation",
                    "ec2:ModifyInstanceCreditSpecification",
                    "ec2:GetReservedInstancesExchangeQuote",
                    "ec2:AcceptReservedInstancesExchangeQuote",
                    "ec2:CancelReservedInstancesListing",
                    "ec2:ModifyReservedInstances"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Sid": "ZestyEC2AutoScalingAccess",
                  "Effect": "Allow",
                  "Action": [
                    "autoscaling:Describe*"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Sid": "ZestyOrganizationsAccess",
                  "Effect": "Allow",
                  "Action": [
                    "organizations:List*",
                    "organizations:Describe*",
                    "organizations:InviteAccountToOrganization",
                    "organizations:DeclineHandshake",
                    "organizations:AcceptHandshake",
                    "organizations:CancelHandshake",
                    "organizations:MoveAccount"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Sid": "ZestyCloudWatchAccess",
                  "Effect": "Allow",
                  "Action": [
                    "cloudwatch:List*",
                    "cloudwatch:Describe*",
                    "cloudwatch:GetMetricStatistics"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Sid": "ZestySavingsPlansAccess",
                  "Effect": "Allow",
                  "Action": [
                    "savingsplans:*"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Sid": "ZestyCostExplorerAccess",
                  "Effect": "Allow",
                  "Action": [
                    "ce:List*",
                    "ce:Describe*",
                    "ce:Get*"
                  ],
                  "Resource": [
                    "*"
                  ]
                },
                {
                  "Sid": "ZestyCloudTrailAccess",
                  "Effect": "Allow",
                  "Action": [
                    "cloudtrail:List*",
                    "cloudtrail:LookupEvents",
                    "cloudtrail:Describe*",
                    "cloudtrail:Get*"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "ZestyRoleArn": {
      "Description": "The ARN of the role created for Zesty integration",
      "Value": {
        "Fn::GetAtt": [
          "ZestyIamRole",
          "Arn"
        ]
      }
    }
  }
}
